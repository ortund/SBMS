@model SBMSData.ViewModels.InvoicesViewModel
@{
    ViewBag.Title = "Managing Invoices";
    ViewBag.CurrentPage = Model.CurrentPage;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <h2><a href="/Invoice/Create"><i class="glyphicon glyphicon-plus"></i></a>&nbsp;@ViewBag.Title</h2>
    </div>
</div>

@Html.Partial("_PagingPartial")

<div class="row">
    <div class="col-md-12">
        @if (Model.Invoices.Count >= 1)
        {
            <table class="table table-striped table-hover table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">Store</th>
                        <th scope="col">Invoice Number</th>
                        <th scope="col">Invoice Amount</th>
                        <th scope="col">Invoice Date</th>
                        <th scope="col">Paid On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model.Invoices)
                    {
                        <tr>
                            <td>
                                <a href="/Invoice/Details/@invoice.Id"><i class="glyphicon glyphicon-eye-open"></i></a>
                            </td>
                            <td>
                                <a href="/Invoice/Edit/@invoice.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                            </td>
                            <td>@invoice.Store.Name</td>
                            <td>@invoice.Number</td>
                            <td>R @invoice.Amount</td>
                            <td>@invoice.Date.ToString("yyyy/MM/dd")</td>
                            <td>
                            @if (invoice.DatePaid != null)
                            {
                                @Convert.ToDateTime(invoice.DatePaid).ToString("yyyy/MM/dd")
                            }
                            else
                            {
                                <span>-</span>
                            }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>
                There aren't any invoices in the system yet. <a href="/Invoice/Create">Create One?</a>
            </p>
        }
    </div>
</div>

@Html.Partial("_PagingPartial")

<script>
    $(".pagination button").on("click", function () {
        var pageNumber = $(this).attr("data-item");
        location.href = "/Invoice/page=" + pageNumber;
    });
</script>