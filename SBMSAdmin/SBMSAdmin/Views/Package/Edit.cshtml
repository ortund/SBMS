@model SBMSAdmin.Models.PackageViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <h2>Editing a Package</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="form-horizontal">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Price, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Price, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group"> 
                    @Html.LabelFor(m => m.Features, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @foreach (var item in Model.Features)
                        {
                            <div class="col-md-4 checkbox">
                                <label>
                                    <input type="checkbox" name="SelectedFeatures" class="feature" value="@item.Value" @(Model.SelectedFeatures.Contains(Convert.ToInt32(item.Value)) ? "checked" : "") /> @item.Text
                                </label>
                            </div>
                        }
                    </div>
                </div>
                @Html.HiddenFor(m => m.Id)
            }

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <button class="btn btn-primary save">Save</button>
                    <button class="btn btn-default cancel">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(".save").on("click", function () {
        Save();
    });

    $(".cancel").on("click", function () {
        location.href = "/Package";
    });

    function Save() {
        var id = $("#Id").val();
        var name = $("#Name").val();
        var price = $("#Price").val();
        var features = $("#Features").val();
        var selectedFeatures = $('input.feature:checked').map((i, x) => x.value).toArray();

        var package = {
            "Id": id,
            "Name": name,
            "Price": price,
            "Features": features,
            "SelectedFeatures": selectedFeatures
        };

        $.post("/Package/Edit", package, function (data) {
            if (data.IsOkay)
            {
                alert("Package successfully updated.");
                location = "/Package";
            }
            else
            {
                alert("An error occurred:\r\n" + data.Error);
            }
        }, "json");
    }
</script>