@model SBMSData.ViewModels.PackagesViewModel
@{
    ViewBag.Title = "Managing Packages";
    ViewBag.CurrentPage = Model.CurrentPage;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <h2><a href="/Package/Create"><i class="glyphicon glyphicon-plus"></i></a>&nbsp;Managing Packages</h2>
    </div>
</div>

@Html.Partial("_PagingPartial")

<div class="row">
    <div class="col-md-12">
        @if (Model.Packages.Count >= 1)
        {
            <table class="table table-striped table-hover table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var package in Model.Packages)
                    {
                        <tr>
                            <td>
                                <a href="/Package/Edit/@package.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                            </td>
                            <td>
                                <a href="/Package/Delete/@package.Id"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                            <td>@package.Name</td>
                            <td>@package.Price</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>
                There aren't any packages in the system yet. <a href="/Package/Create">Create one?</a>
            </p>
        }
    </div>
</div>

@Html.Partial("_PagingPartial")

<script>
    $(".pagination button").on("click", function () {
        var pageNumber = $(this).attr("data-item");
        location.href = "/Package/?page=" + pageNumber;
    });
</script>