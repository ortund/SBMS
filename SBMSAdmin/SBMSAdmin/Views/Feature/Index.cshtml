@model SBMSData.ViewModels.FeaturesViewModel
@{
    ViewBag.Title = "Managing Features";
    ViewBag.CurrentPage = Model.CurrentPage;

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <h2><a href="/Feature/Create"><i class="glyphicon glyphicon-plus"></i></a>&nbsp; Managing Features</h2>
    </div>
</div>

@Html.Partial("_PagingPartial")

<div class="row">
    <div class="col-md-12">
        @if (Model.Features.Count >= 1)
        {
            <table class="table table-striped table-hover table-responsive">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var feature in Model.Features)
                    {
                        <tr>
                            <td>
                                <a class="edit" href="/Feature/Edit/@feature.Id"><i class="glyphicon glyphicon-pencil"></i></a>
                            </td>
                            <td>
                                <a class="delete" href="/Feature/Delete/@feature.Id"><i class="glyphicon glyphicon-trash"></i></a>
                            </td>
                            <td>@feature.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>There aren't any features in the system yet. <a href="/Feature/Create">Create one?</a></p>
        }
    </div>
</div>

<script>
    $("a").on("click", function () {

    });
</script>